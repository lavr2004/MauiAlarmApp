<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlarmApp.MainPage">
    <StackLayout Padding="20">
        <TimePicker x:Name="AlarmTimePicker" Format="HH:mm" />
        <Button Text="Set the Alarm" Clicked="SetAlarm_Clicked" />
        <Button Text="Cancel Planned Alarm" Clicked="CancelAlarm_Clicked" Margin="0, 5, 0, 0"/>
        <Button x:Name="StopButton" Text="STOP Alarm" Clicked="StopAlarm_Clicked" IsEnabled="False" BackgroundColor="Red" TextColor="White" Margin="0, 5, 0, 0"/>
        <Label x:Name="StatusLabel" Text="The Alarm Clock is not set" />
    </StackLayout>
</ContentPage>